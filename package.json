{
  "name": "espaco-dialogico",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development npm run services:up && npm run services:wait:database && node infra/scripts/ensure-port-available.js && npm run migrations:up && next dev",
    "dev:safe": "cross-env NODE_ENV=development npm run services:up && npm run services:wait:database && node infra/scripts/ensure-port-available.js && npm run migrations:up && cross-env NEXT_MANUAL_START=true node infra/scripts/start-next-dev.js",
    "dev:clean": "npm run services:down && npm run dev",
    "dev:isolated": "node infra/scripts/dev-isolated.js",
    "dev:isolated:safe": "npm run dev:fix-permissions && node infra/scripts/dev-isolated.js",
    "dev:fix-permissions": "node infra/scripts/fix-next-permissions.js",
    "build": "next build",
    "postbuild": "node -e \"if(process.env.NODE_ENV !== 'development' && process.env.NODE_ENV !== 'test') require('./infra/scripts/run-migrations.js')\"",
    "db:validate": "node infra/scripts/validate-db.js",
    "db:test": "node infra/scripts/test-db-connection.js",
    "db:seed:terapeutas": "node infra/scripts/seed-terapeutas.js",
    "db:seed:all": "node infra/scripts/run-seeds.js",
    "test:frontend": "cross-env NODE_ENV=test JEST_EXPLICIT_RUN=true jest tests/frontend --env=jsdom",
    "test:all": "npm run services:up && npm run services:wait:database && cross-env NODE_ENV=test JEST_EXPLICIT_RUN=true concurrently -k -s first \"next dev\" \"wait-on -t 30000 -i 1000 -v http://localhost:3000/api/v1/status && jest --runInBand --verbose --forceExit\"",
    "test": "npm run services:up && npm run services:wait:database && cross-env NODE_ENV=test JEST_EXPLICIT_RUN=true concurrently -k -s first \"next dev\" \"wait-on -t 30000 -i 1000 -v http://localhost:3000/api/v1/status && jest --runInBand --verbose --forceExit\"",
    "test:ci": "cross-env NODE_ENV=test JEST_EXPLICIT_RUN=true concurrently -k -s first \"next dev\" \"wait-on -t 30000 -i 1000 -v http://localhost:3000/api/v1/status && jest --runInBand --verbose --forceExit\"",
    "test:ci:local": "npm run services:up && npm run services:wait:database && npm run test:ci",
    "test:single": "cross-env NODE_ENV=test JEST_EXPLICIT_RUN=true jest --runInBand --verbose --",
    "test:verbose": "cross-env TEST_VERBOSE=true npm test",
    "neodev": "node ./handle-dev-services.js",
    "posttest": "npm run services:stop",
    "test:watch": "cross-env NODE_ENV=test JEST_EXPLICIT_RUN=true jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "cross-env NODE_ENV=development node infra/scripts/run-migrations.js",
    "migrations:up:legacy": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migrations:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "migrations:down:all": "node-pg-migrate -m infra/migrations --envPath .env.development down --count all",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "migrations:reset:production": "cross-env FORCE_RESET=CONFIRMAR node infra/scripts/reset-remote-migrations.js .env.production",
    "migrations:reset:staging": "cross-env FORCE_RESET=CONFIRMAR node infra/scripts/reset-remote-migrations.js .env.staging",
    "migrations:reset:production-safe": "node infra/scripts/reset-remote-migrations.js .env.production",
    "migrations:reset:staging-safe": "node infra/scripts/reset-remote-migrations.js .env.staging",
    "migrations:fix-timestamps:dev": "node infra/scripts/fix-migration-timestamps.js .env.development.local",
    "migrations:fix-timestamps:staging": "node infra/scripts/fix-migration-timestamps.js .env.staging",
    "migrations:fix-timestamps:production": "node infra/scripts/fix-migration-timestamps.js .env.production",
    "migrations:sync:dev": "node infra/scripts/sync-migration-timestamps.js .env.development.local",
    "migrations:sync:staging": "node infra/scripts/sync-migration-timestamps.js .env.staging",
    "migrations:sync:production": "node infra/scripts/sync-migration-timestamps.js .env.production",
    "commit": "cz",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": "secretlint",
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:eslint:check --",
      "npm run lint:prettier:fix --"
    ],
    "*.{md,html,css}": [
      "npm run lint:prettier:fix --"
    ]
  },
  "author": "Danilo Marra Rabelo",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^2.2.1",
    "@hookform/resolvers": "^3.10.0",
    "@phosphor-icons/react": "^2.1.7",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-visually-hidden": "^1.1.1",
    "@reduxjs/toolkit": "^2.5.0",
    "@shadcn/ui": "^0.0.4",
    "@types/nodemailer": "^6.4.17",
    "async-retry": "1.3.3",
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.2",
    "chalk": "^4.1.2",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.6.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "16.4.7",
    "dotenv-expand": "^12.0.1",
    "form-data": "^4.0.3",
    "formidable": "^3.5.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.469.0",
    "multer": "^1.4.5-lts.2",
    "next": "15.1.0",
    "next-cloudinary": "^6.16.0",
    "next-connect": "^1.0.0",
    "next-themes": "^0.4.4",
    "node-pg-migrate": "7.8.0",
    "nodemailer": "^7.0.3",
    "pg": "8.13.1",
    "puppeteer": "^23.11.1",
    "react": "^18.2.0",
    "react-datepicker": "^7.6.0",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.54.2",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.0.0",
    "sonner": "^1.7.1",
    "swr": "2.2.5",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "11.1.0",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@faker-js/faker": "^9.6.0",
    "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/async-retry": "^1.4.9",
    "@types/formidable": "^3.4.5",
    "@types/multer": "^1.4.12",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "19.0.1",
    "@types/react-dropzone": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "autoprefixer": "^10.4.20",
    "commitizen": "4.3.1",
    "concurrently": "9.1.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "15.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.9.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "15.2.11",
    "msw": "^1.3.2",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.49",
    "prettier": "3.4.2",
    "secretlint": "9.0.0",
    "tailwindcss": "^3.4.16",
    "wait-on": "^8.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
